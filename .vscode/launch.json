{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Debug in terminal",
			"type": "python",
			"request": "launch",
			"purpose": [
				"debug-in-terminal"
			],
			"justMyCode": false
		},
		{
			"name": "Python: RobotCode.Runner",
			"type": "python",
			"request": "launch",
			"module": "robotcode.runner",
			"justMyCode": false,
			"cwd": "${workspaceFolder}/tests/robotcode/language_server/robotframework/parts/data",
			"args": [
				"tests1"
			]
			// "args": [
			// 	"-d",
			// 	"results",
			// 	"-P",
			// 	"./lib",
			// 	"-P",
			// 	"resources",
			// 	"-v",
			// 	"NAME:value",
			// 	"--dryrun",
			// 	"tests"
			// ]
		},
		{
			"name": "Python: RobotCode",
			"type": "python",
			"request": "launch",
			"module": "robotcode.cli",
			"justMyCode": false,
			"cwd": "${workspaceFolder}/tests/robotcode/language_server/robotframework/parts/data",
			// "env": {
			// 	"ROBOTCODE_COLOR": "1",
			// },
			"args": [
				"--verbose",
				"--dry",
				// "-p",
				// "firefox",
				// "--dry",
				// "robot",
				// "--",
				// "--help"
				// "tests1"
				// "profiles",

				// "show",
				// "list",
				// "--format",
				// "toml"
				"rebot",

			]
		},
		{
			"name": "Python: Attach using Process Id",
			"type": "python",
			"request": "attach",
			"processId": "${command:pickProcess}"
		},
		{
			"name": "Python: Current File",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"console": "integratedTerminal",
			"justMyCode": false,
			"cwd": "${workspaceFolder}",
		},
		{
			"name": "Python: Attach to 5678",
			"type": "python",
			"request": "attach",
			"connect": {
				"host": "localhost",
				"port": 5678
			},
			"justMyCode": false,
			"subProcess": true,
			"showReturnValue": true,
		},
		{
			"name": "Python: Attach Prompt",
			"type": "python",
			"request": "attach",
			"connect": {
				"host": "localhost",
				"port": "${input:portNumber}"
			}
		},
		{
			"name": "Python: Pytest All Test",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"args": [
				"."
			],
			"console": "integratedTerminal",
			"justMyCode": false,
			"cwd": "${workspaceFolder}",
		},
		{
			"name": "Python: Pytest Some Test",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"args": [
				"--full-trace",
				"--tb=native",
				//"--regtest-reset",
				//"tests/robotcode/language_server/robotframework/parts/test_foldingrange.py"
				//"tests/robotcode/language_server/robotframework/parts/test_references.py"
				//"./tests/robotcode/language_server/robotframework/parts/test_discovering.py::test_workspace_discovery"
				//"tests/robotcode/language_server/robotframework/parts/test_document_highlight.py"
				"tests/robotcode/utils/test_dataclasses.py::test_really_complex_data"
			],
			"console": "integratedTerminal",
			"justMyCode": false,
			"cwd": "${workspaceFolder}",
		},
		{
			"name": "Python: Pytest All Test Parallel",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"args": [
				"-n",
				"8",
				"."
			],
			"console": "integratedTerminal",
			"justMyCode": false,
			"cwd": "${workspaceFolder}",
		},
		{
			"name": "Python: Pytest All Test Coverage",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"args": [
				"--cov-report=xml",
				"--cov=robotcode",
				"."
			],
			"console": "integratedTerminal",
			"justMyCode": false,
			"cwd": "${workspaceFolder}",
		},
		{
			"name": "Python: Pytest Current File",
			"type": "python",
			"request": "launch",
			"module": "pytest",
			"args": [
				"${file}"
			],
			"console": "integratedTerminal",
			"justMyCode": false,
			"cwd": "${workspaceFolder}",
		},
		{
			"name": "Python: robotcode.debugger",
			"type": "python",
			"request": "launch",
			"cwd": "${workspaceFolder}/tests/robotcode/language_server/robotframework/parts/data",
			"module": "robotcode.debugger",
			"justMyCode": false,
			"args": [
				"-p",
				"6612",
				"-b",
				"localhost",
				"-b",
				"192.168.178.83",
				"-w",
				"--",
				"-d",
				"results",
				"-P",
				"./lib",
				"-P",
				"./resources",
				//"C:\\tmp\\robottest\\tests\\bdd_style.robot"
				"."
			]
		},
		{
			"name": "Python: robotcode.debugger.launcher tcp",
			"type": "python",
			"request": "launch",
			"module": "robotcode.debugger.launcher",
			"justMyCode": false,
			"args": [
				"--mode",
				"tcp",
				"--call-tracing",
				"--log-config",
				"log.ini"
			]
		},
		{
			"name": "Python: robotcode.debugger.launcher stdio",
			"type": "python",
			"request": "launch",
			"module": "robotcode.debugger.launcher",
			"justMyCode": false,
			"args": [
				"--mode",
				"stdio"
			]
		},
		{
			"name": "Python: robotcode.language_server tcp",
			"type": "python",
			"request": "launch",
			"module": "robotcode.language_server",
			"justMyCode": false,
			"args": [
				"--mode",
				"tcp",
				"--log",
				"--log-level",
				"TRACE",
				//"--log-json-rpc-data",
				"--log-json-rpc",
				//"--log-language-server",
				//"--log-robotframework",
				//"--debug-asyncio",
				//"--log-asyncio"
				//"--call-tracing",
				// "--log-config",
				// "log.ini"
			]
		},
		{
			"name": "Python: robotcode.language_server stdio",
			"type": "python",
			"request": "launch",
			"module": "robotcode.language_server",
			"justMyCode": false,
			"args": [
				"--mode",
				"stdio",
				"--log",
				"--log-level",
				"TRACE",
				"--call-tracing",
				"--log-json-rpc",
				"--log-json-rpc-data",
				"--log-language-server",
				"--log-language-server-parts",
				"--log-robotframework",
				"--log-asyncio",
				"--debug-asyncio"
			]
		},
		{
			"name": "Python: robot.libdoc",
			"type": "python",
			"request": "launch",
			"module": "robot.libdoc",
			"justMyCode": false,
			"args": [
				"./playground/second.py",
				"list",
			]
		},
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			// "env": {
			// 	"ROBOT_THREADPOOL_POOL_MAX_WORKERS": "8",
			// 	"ROBOT_PROCESS_POOL_MAX_WORKERS": "4"
			// },
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "npm: compile"
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.js"
			],
			"preLaunchTask": "npm: compile"
		},
		{
			"name": "Python: Debug Tests",
			"type": "python",
			"request": "launch",
			"program": "${file}",
			"purpose": [
				"debug-test"
			],
			"console": "integratedTerminal",
			"justMyCode": false
		},
		{
			"name": "Python: Remote-Attach",
			"type": "python",
			"request": "attach",
			"connect": {
				"host": "localhost",
				"port": 5678
			},
			"pathMappings": [
				{
					"localRoot": "${workspaceFolder}",
					"remoteRoot": "."
				}
			],
			"justMyCode": true
		}
	],
	"inputs": [
		{
			"type": "promptString",
			"id": "portNumber",
			"description": "debugpy portnumber",
			"default": "5678",
		}
	]
}